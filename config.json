{
  "name": "Tesla BLE Local Control",
  "description": "Local, low-latency control of Tesla vehicles via Bluetooth Low Energy (BLE) with MQTT publishing",
  "version": "0.1.0",
  "slug": "hass-tesla-ble",
  "init": false,
  "arch": [
    "aarch64",
    "amd64"
  ],
  "ports": {},
  "map": [
    "config:rw",
    "share:rw"
  ],
  "options": {
    "mqtt": {
      "host": "core-mosquitto",
      "port": 1883,
      "username": "",
      "password": "",
      "discovery_prefix": "homeassistant"
    },
    "bluetooth": {
      "adapter": "hci0",
      "mode": "usb_passthrough"
    },
    "vehicle": {
      "vin": ""
    }
  },
  "schema": {
    "mqtt": {
      "host": "str",
      "port": "port",
      "username": "str?",
      "password": "str?",
      "discovery_prefix": "str"
    },
    "bluetooth": {
      "adapter": "str",
      "mode": "list(usb_passthrough|host_mode)"
    },
    "vehicle": {
      "vin": "str"
    }
  },
  "devices": [
    "/dev/bus/usb",
    "/dev/rfkill"
  ],
  "services": [
    "mqtt:need",
    "bluetooth:want"
  ],
  "host_dbus": true,
  "privileged": [
    "NET_ADMIN",
    "NET_RAW"
  ],
  "environment": {
    "RUST_LOG": "info"
  }
}
